extends layout

block content

  .form-box.col-md-6.col-md-offset-3
    .form-top
      .form-top-left
        h2 Log In
        p Enter username and password to log on:
      .form-top-right
        i.fa.fa-key
    .form-bottom
      form.login-form(role='form', action='/login', method='post')
        .form-group
          label(for='form-username') Username
          |
          input#form-username.form-username.form-control(type='text', name='username', placeholder='Username...', autocomplete='off')
        .form-group
          label(for='form-password') Password
          |
          input#form-password.form-password.form-control(type='password', name='password', placeholder='Password...', autocomplete='off')
        |
        button.btn.btn-primary(type='submit') Log in!
  .social-login.col-md-6.col-md-offset-3
    h3 ...or login with:
    .social-login-buttons
      a.btn.btn-link-1.btn-link-1-facebook(href='#')
        i.fa.fa-facebook
        |  Facebook
      a.btn.btn-link-1.btn-link-1-twitter(href='#')
        i.fa.fa-twitter
        |  Twitter
      a.btn.btn-link-1.btn-link-1-google-plus(href='#')
        i.fa.fa-google-plus
        |  Google Plus
