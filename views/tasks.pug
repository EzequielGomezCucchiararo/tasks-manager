extends layout

block content
  div
    .row-fluid
      .col-sm-6.col-md-4.col-lg-3.cardcol
        .panel.panel-primary
          .panel-heading
            h3.panel-title TO-DO
          .panel-body
            ul.list-group
              li.list-group-item
                span.glyphicon.glyphicon-trash.right(ng-click='delNote(item, content);')
                span.glyphicon.glyphicon-pencil.right(data-toggle='modal', data-target='#noteEditor{{$id}}')
                h4 Buy Milk
                p.prewrap ... and cookies, chocolate & honey
                p.notefooter
                  small
                    | created:
                    b @juanmaguitar
                    | , 12/01/2017
              li.list-group-item.list-group-item-info
                button#newCard.btn.btn-primary.newnotebtn(ng-click="newNoteTitle=''; newNoteContent='';", data-toggle='modal', data-target='#elementAdder{{$id}}')
                  span.glyphicon.glyphicon-pushpin
                  |  new note
                button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#myModal')  Launch demo modal
